{
	"name": "@chikoshidori/akira",
	"version": "0.1.0",
	"description": "template",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "@chikoshidori",
	"license": "MIT",
	"scripts": {
		"lint": "eslint src scripts --ext ts,mjs --fix",
		"format": "prettier --write --loglevel=warn {src,scripts}/**/*.ts",
		"docs": "typedoc",
		"update": "yarn upgrade-interactive",
		"build": "tsc -b src && rollup -c scripts/rollup.bundle.ts && gen-esm-wrapper dist/index.js dist/index.mjs",
		"commit": "git-cz",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"prepare": "husky install .github/husky",
		"test": "yarn build && node test/test.mjs"
	},
	"dependencies": {
		"@sapphire/utilities": "^3.8.0",
		"playwright": "^1.24.2",
		"tslib": "^2.4.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@favware/cliff-jumper": "^1.8.6",
		"@favware/npm-deprecate": "^1.0.5",
		"@favware/rollup-type-bundler": "^1.0.10",
		"@sapphire/eslint-config": "^4.3.7",
		"@sapphire/prettier-config": "^1.4.3",
		"@sapphire/ts-config": "^3.3.4",
		"@types/node": "^17.0.25",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "~8.20.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3",
		"rollup": "^2.77.2",
		"rollup-plugin-version-injector": "^1.3.3",
		"typedoc": "^0.23.9",
		"typedoc-plugin-mdn-links": "^2.0.0",
		"typescript": "^4.7.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chikoshidori/akira.git"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"engines": {
		"node": ">=v14.0.0",
		"npm": ">=7.0.0"
	},
	"keywords": [
		"ts",
		"yarn",
		"anime",
		"scraper",
		"typescript",
		"chikoshidori",
		"@chikoshidori/akira"
	],
	"bugs": {
		"url": "https://github.com/chikoshidori/akira/issues"
	},
	"homepage": "https://chikum.me/akira",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"eslintConfig": {
		"extends": "@sapphire"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.2.2"
}
